{{#extend "app-layout"}}
  {{#content "article" mode="append"}}
      <div class="title-block">
          <h3 class="title">
              {{__ 'Add machine'}}
          </h3>
      </div>


      <form id="machine-add-form" novalidate="" >
          <div class="card card-block">

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Machine ID'}}:
                  </label>
                  <div class="col-sm-10">
                      <textarea id="machineIds" class="form-control boxed" placeholder="{{__ 'Add machine placeholder'}}"></textarea>
                  </div>
              </div>

              <div class="form-group row">
                  <div class="col-sm-2"></div>
                  <div class="col-sm-10 error-message" style="display: none"></div>
              </div>
              <div class="form-group row">
                  <div class="col-sm-10 col-sm-offset-2">
                      <button type="button" class="btn btn-primary" id="getMachineInfo">
                        {{__ 'Get machine info'}}
                      </button>
                  </div>
              </div>
          </div>
      </form>
  {{/content}}
{{/extend}}
