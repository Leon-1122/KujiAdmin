{{#extend "app-layout"}}
  {{#content "article" mode="append"}}
      <div class="title-block">
          <h3 class="title">
              {{__ 'Machine detail'}}
          </h3>
          <div style="text-align: right">
              <a href="/machine/stock?searchFor={{machine.machine_id}}" class="btn btn-primary btn-sm rounded-s">
                {{__ 'Stock'}}
              </a>
              <a href="/machine/lottery?searchFor={{machine.machine_id}}" class="btn btn-primary btn-sm rounded-s">
                {{__ 'Lottery'}}
              </a>
              <a href="/machine/log?searchFor={{machine.machine_id}}" class="btn btn-primary btn-sm rounded-s">
                {{__ 'Log'}}
              </a>
          </div>
      </div>


      <form id="machine-detail-form" novalidate="" onsubmit="return false">
          <div class="card card-block">

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Machine ID'}}:
                  </label>
                  <div class="col-sm-10">
                      {{machine.machine_id}}
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Location'}}:
                  </label>
                  <div class="col-sm-10">
                    {{machine.location}}
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Inventory'}}:
                  </label>
                  <div class="col-sm-10">
                    {{machine.inventory}}
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Sale count'}}:
                  </label>
                  <div class="col-sm-10">
                    {{machine.sale_count}}
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'AI status'}}:
                  </label>
                  <div class="col-sm-10">
                    {{machine.ai_status}}
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'OO status'}}:
                  </label>
                  <div class="col-sm-10 {{machine.oo_status}}">
                    {{machine.oo_status}}
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Assign time'}}:
                  </label>
                  <div class="col-sm-10">
                    {{machine.assign_time}}
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'AI time'}}:
                  </label>
                  <div class="col-sm-10">
                    {{machine.ai_time}}
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Software version'}}:
                  </label>
                  <div class="col-sm-10">
                    {{machine.software_version}}
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Upgrade time'}}:
                  </label>
                  <div class="col-sm-10">
                    {{machine.upgrade_time}}
                  </div>
              </div>
          </div>
          <input type="hidden" name="id" value="{{machine.id}}">
      </form>
  {{/content}}
{{/extend}}
