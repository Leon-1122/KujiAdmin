{{#extend "app-layout"}}
  {{#content "article" mode="append"}}
      <div class="title-block">
          <h3 class="title">
              {{__ 'Add machine lottery'}}
          </h3>
      </div>


      <form id="machine-lottery-add-form" data-action="addMachineLottery" data-redirect="/machine/lottery" novalidate="" onsubmit="return false">
          <div class="card card-block">

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Machine ID'}}:
                  </label>
                  <div class="col-sm-10">
                      <select class="c-select form-control boxed" name="machineId" id="machineId">
                          <option value="">{{__ 'Select one'}}</option>
                        {{#each machineList}}
                            <option value="{{this.id}}">{{this.machine_id}}</option>
                        {{/each}}
                      </select>
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Lottery'}}:
                  </label>
                  <div class="col-sm-10">
                      <select class="c-select form-control boxed" name="lotteryId" id="lotteryId">
                          <option value="">{{__ 'Select one'}}</option>
                        {{#each lotteryList}}
                            <option value="{{this.id}}">{{this.name}}</option>
                        {{/each}}
                      </select>
                  </div>
              </div>

              <div class="form-group row">
                  <div class="col-sm-2"></div>
                  <div class="col-sm-10 error-message" style="display: none"></div>
              </div>
              <div class="form-group row">
                  <div class="col-sm-10 col-sm-offset-2">
                      <button type="submit" class="btn btn-primary">
                        {{__ 'Submit'}}
                      </button>
                  </div>
              </div>
          </div>
      </form>
  {{/content}}
{{/extend}}
