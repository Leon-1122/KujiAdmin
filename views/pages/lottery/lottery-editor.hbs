{{#extend "app-layout"}}
  {{#content "article" mode="append"}}
      <div class="title-block">
          <h3 class="title">
              {{#if lottery.id}}
                  {{__ 'Edit lottery'}}
              {{/if}}
              {{#unless lottery.id}}
                {{__ 'Add lottery'}}
              {{/unless}}
          </h3>
      </div>


      <form id="lottery-editor-form" data-action="updateLottery" data-redirect="/lottery/list" novalidate="" onsubmit="return false">
          <div class="card card-block">

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Name'}}:
                  </label>
                  <div class="col-sm-10">
                      <input type="text" class="form-control boxed" name="code" id="code" placeholder="" value="{{lottery.name}}" required>
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Price'}}:
                  </label>
                  <div class="col-sm-10">
                      <input type="text" class="form-control boxed" name="desc" id="desc" placeholder="" value="{{lottery.price}}" required>
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Card total'}}:
                  </label>
                  <div class="col-sm-10">
                      <input type="text" class="form-control boxed" name="desc" id="desc" placeholder="" value="{{lottery.cardTotal}}" readonly required>
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'BannerImg'}}:
                  </label>
                  <div class="col-sm-10">
                      <div class="images-container">
                          <div class="image-container banner-image-container">
                              <div class="controls">
                                  <a href="#" class="control-btn remove" data-toggle="modal" data-target="#confirm-modal">
                                      <i class="fa fa-trash-o"></i>
                                  </a>
                              </div>
                              <div class="image" style="background-image:url('{{lottery.bannerImg}}')"></div>
                          </div>
                      </div>
                      <p class="input-description">{{__ 'Resolution'}}:1002*429</p>
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'TopImg'}}:
                  </label>
                  <div class="col-sm-10">
                      <div class="images-container">
                          <div class="image-container single-image-container">
                              <div class="controls">
                                  <a href="#" class="control-btn remove" data-toggle="modal" data-target="#confirm-modal">
                                      <i class="fa fa-trash-o"></i>
                                  </a>
                              </div>
                              <div class="image" style="background-image:url('{{lottery.topImg}}')"></div>
                          </div>
                      </div>
                      <p class="input-description">{{__ 'Resolution'}}:1000*1000</p>
                  </div>
              </div>

              <div class="form-group row">
                  <div class="col-sm-2"></div>
                  <div class="col-sm-10 error-message" style="display: none"></div>
              </div>
              <div class="form-group row">
                  <div class="col-sm-10 col-sm-offset-2">
                      <button type="submit" class="btn btn-primary">
                        {{__ 'Submit'}}
                      </button>
                  </div>
              </div>
          </div>
          <input type="hidden" name="id" value="{{lottery.id}}">
      </form>
  {{/content}}
{{/extend}}
