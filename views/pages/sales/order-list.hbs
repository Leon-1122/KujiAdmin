{{#extend "app-layout"}}
  {{#content "article" mode="append"}}
      <div class="title-search-block">

          <div class="title-block">
              <div class="row">
                {{!-- Title --}}
                  <div class="col-md-6">
                      <h3 class="title">
                        {{__ 'Sales'}}
                          <a href="javascript:exportCsv('order-list')" class="btn btn-primary btn-sm rounded-s">
                            {{__ 'Export'}}
                          </a>
                      </h3>
                      <p class="title-description">
                        {{__ 'Order list'}}
                      </p>
                  </div>

              </div>
          </div>


          <div class="items-search">
              <form id="order-list-form" class="form-inline" action="/order/list">
                  <div class="input-group">
                      <input type="text" name="searchFor" class="form-control boxed rounded-s" placeholder="{{__ 'Search for order'}}" value="{{searchFor}}">
                      <span class="input-group-btn">
                        <button class="btn btn-secondary rounded-s" type="submit">
                          <i class="fa fa-search"></i>
                        </button>
                      </span>
                  </div>
              </form>
          </div>
      </div>

      <div class="card items">
          <ul class="item-list striped">
              <li class="item item-list-header">
                  <div class="item-row">
                      <div class="item-col item-col-header item-col-date">
                          <div>
                              <span>{{__ 'Order No'}}</span>
                          </div>
                      </div>
                      <div class="item-col item-col-header item-col-date">
                          <div>
                              <span>{{__ 'Buyer nick'}}</span>
                          </div>
                      </div>
                      <div class="item-col item-col-header item-col-date">
                          <div>
                              <span>{{__ 'Machine ID'}}</span>
                          </div>
                      </div>
                      <div class="item-col item-col-header item-col-date item-col-6">
                          <div>
                              <span>{{__ 'Goods name'}}</span>
                          </div>
                      </div>
                      <div class="item-col item-col-header item-col-date">
                          <div>
                              <span>{{__ 'Goods price'}}</span>
                          </div>
                      </div>
                      <div class="item-col item-col-header item-col-date">
                          <div>
                              <span>{{__ 'Goods num'}}</span>
                          </div>
                      </div>
                      <div class="item-col item-col-header item-col-date">
                          <div>
                              <span>{{__ 'Total fee'}}</span>
                          </div>
                      </div>
                      <div class="item-col item-col-header item-col-date">
                          <div>
                              <span>{{__ 'Status'}}</span>
                          </div>
                      </div>
                      <div class="item-col item-col-header item-col-date">
                          <div>
                              <span>{{__ 'Created At'}}</span>
                          </div>
                      </div>
                      <div class="item-col item-col-header item-col-date">
                          <div>
                              <span>{{__ 'Updated At'}}</span>
                          </div>
                      </div>
                  </div>
              </li>
            {{#each items}}
                <li class="item">

                    <div class="item-row">
                        <div class="item-col item-col-date">
                            <div class="item-heading">{{../__ 'Order No'}}</div>
                            <div>
                                {{this.orderNo}}
                            </div>
                        </div>
                        <div class="item-col item-col-date">
                            <div class="item-heading">{{../__ 'Buyer nick'}}</div>
                            <div>
                              {{this.buyerNick}}
                            </div>
                        </div>
                        <div class="item-col item-col-date">
                            <div class="item-heading">{{../__ 'Machine ID'}}</div>
                            <div>
                              {{this.machineId}}
                            </div>
                        </div>
                        <div class="item-col item-col-date item-col-6">
                            <div class="item-heading">{{../__ 'Goods name'}}</div>
                            <div>
                              {{this.title}}
                            </div>
                        </div>
                        <div class="item-col item-col-date">
                            <div class="item-heading">{{../__ 'Goods price'}}</div>
                            <div>
                              {{this.price}}
                            </div>
                        </div>
                        <div class="item-col item-col-date">
                            <div class="item-heading">{{../__ 'Goods num'}}</div>
                            <div>
                              {{this.num}}
                            </div>
                        </div>
                        <div class="item-col item-col-date">
                            <div class="item-heading">{{../__ 'Total fee'}}</div>
                            <div>
                              {{this.totalFee}}
                            </div>
                        </div>
                        <div class="item-col item-col-date">
                            <div class="item-heading">{{../__ 'Status'}}</div>
                            <div>
                              {{#each ../orderStatusCode}}
                                {{#is ../this.status '==' this.code}}
                                  {{this.codeName}}
                                {{/is}}
                              {{/each}}
                            </div>
                        </div>
                        <div class="item-col item-col-date">
                            <div class="item-heading">{{../__ 'Created At'}}</div>
                            <div class="no-overflow">
                              {{#date this.createdAt}}{{/date}}
                            </div>
                        </div>
                        <div class="item-col item-col-date">
                            <div class="item-heading">{{../__ 'Updated At'}}</div>
                            <div class="no-overflow">
                              {{#date this.updatedAt}}{{/date}}
                            </div>
                        </div>
                    </div>
                </li>
            {{/each}}
          </ul>
      </div>

      {{> app/_common/pager/pager}}

  {{/content}}
{{/extend}}
