{{#extend "app-layout"}}
  {{#content "article" mode="append"}}
      <div class="title-block">
          <h3 class="title">
              {{__ 'Edit profile'}}
          </h3>
      </div>

      <form id="profile-editor-form" data-action="updateProfile" novalidate="" onsubmit="return false">
          <div class="card card-block">

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Account name'}}:
                  </label>
                  <div class="col-sm-10">
                      <div style="padding-left:12px;">
                        {{user.accountName}}
                      </div>
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Email Address'}}:
                  </label>
                  <div class="col-sm-10">
                      <input type="text" class="form-control boxed" name="emailAddress" id="emailAddress" placeholder="" value="{{user.emailAddress}}" required>
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Full Name'}}:
                  </label>
                  <div class="col-sm-10">
                      <input type="text" class="form-control boxed" name="fullName" id="fullName" placeholder="" value="{{user.fullName}}" required>
                  </div>
              </div>

              <div class="form-group row">
                  <div class="col-sm-2"></div>
                  <div class="col-sm-10 error-message" style="display: none"></div>
              </div>
              <div class="form-group row">
                  <div class="col-sm-2"></div>
                  <div class="col-sm-10 success-message" style="display: none"></div>
              </div>
              <div class="form-group row">
                  <div class="col-sm-10 col-sm-offset-2">
                      <button type="submit" class="btn btn-primary">
                        {{__ 'Submit'}}
                      </button>
                  </div>
              </div>
          </div>
      </form>
  {{/content}}
{{/extend}}
