{{#extend "app-layout"}}
  {{#content "article" mode="append"}}
      <div class="title-block">
          <h3 class="title">
              {{__ 'Edit password'}}
          </h3>
      </div>

      <form id="password-editor-form" data-action="updatePassword" data-redirect="/logout" novalidate="" onsubmit="return false">
          <div class="card card-block">

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Old password'}}:
                  </label>
                  <div class="col-sm-10">
                      <input type="password" class="form-control boxed" name="oldPassword" id="oldPassword" placeholder="" required>
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'New password'}}:
                  </label>
                  <div class="col-sm-10">
                      <input type="password" class="form-control boxed" name="newPassword" id="newPassword" placeholder="" required>
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Confirm password'}}:
                  </label>
                  <div class="col-sm-10">
                      <input type="password" class="form-control boxed" name="confirmPassword" id="confirmPassword" placeholder="" required>
                  </div>
              </div>

              <div class="form-group row">
                  <div class="col-sm-2"></div>
                  <div class="col-sm-10 error-message" style="display: none"></div>
              </div>
              <div class="form-group row">
                  <div class="col-sm-10 col-sm-offset-2">
                      <button type="submit" class="btn btn-primary">
                        {{__ 'Submit'}}
                      </button>
                  </div>
              </div>
          </div>
      </form>
  {{/content}}
{{/extend}}
