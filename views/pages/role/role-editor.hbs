{{#extend "app-layout"}}
  {{#content "article" mode="append"}}
      <div class="title-block">
          <h3 class="title">
              {{#if role.id}}
                  {{__ 'Edit role'}}
              {{/if}}
              {{#unless role.id}}
                {{__ 'Add role'}}
              {{/unless}}
          </h3>
      </div>


      <form id="role-editor-form">
          <div class="card card-block">

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Code'}}:
                  </label>
                  <div class="col-sm-10">
                      <input type="text" class="form-control boxed" name="code" id="code" placeholder="" value="{{role.code}}" required>
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Desc'}}:
                  </label>
                  <div class="col-sm-10">
                      <input type="text" class="form-control boxed" name="desc" id="desc" placeholder="" value="{{role.desc}}" required>
                  </div>
              </div>

              <div class="form-group row">
                  <label class="col-sm-2 form-control-label text-xs-right">
                    {{__ 'Modules'}}:
                  </label>
                  <div class="col-sm-10">
                      {{#each moduleList}}
                          <div>
                              <label>
                                  <input class="checkbox" type="checkbox" name="modules" value="{{this.code}}"
                                         {{#is this.code "in" ../role.modules}}checked{{/is}}>
                                  <span>{{this.desc}}</span>
                              </label>
                          </div>
                      {{/each}}
                  </div>
              </div>
              <div class="form-group row">
                  <div class="col-sm-2"></div>
                  <div class="col-sm-10 error-message" style="display: none"></div>
              </div>
              <div class="form-group row">
                  <div class="col-sm-10 col-sm-offset-2">
                      <button type="submit" class="btn btn-primary">
                        {{__ 'Submit'}}
                      </button>
                  </div>
              </div>
          </div>
          <input type="hidden" name="id" value="{{role.id}}">
      </form>
  {{/content}}
{{/extend}}
