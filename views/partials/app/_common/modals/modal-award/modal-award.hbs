<div class="modal fade" id="modal-award">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="modal-award-form" data-action="editMachineLottery" data-redirect="/machine/lottery/detail/{{machineLottery.id}}" novalidate="" onsubmit="return false">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="col-sm-2 form-control-label text-xs-right">
                          {{__ 'Level'}}:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control boxed" name="level" id="level" placeholder="" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 form-control-label text-xs-right">
                          {{__ 'SKU'}}:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control boxed" name="sku" id="sku" placeholder="" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 form-control-label text-xs-right">
                          {{__ 'Num'}}:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control boxed" name="num" id="num" placeholder="" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10 error-message" style="display: none"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{{__ 'Close'}}</button>
                    <button type="submit" class="btn btn-primary" id="award-ok" onclick="">{{__ 'Confirm'}}</button>
                </div>
                <input type="hidden" name="lotteryId" id="lotteryId" value="{{machineLottery.id}}">
                <input type="hidden" name="mode" id="mode">
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
